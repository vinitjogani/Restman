<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="cellContainer" alignment="CENTER" prefHeight="91.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <Button fx:id="decreaseButton" onAction="#decrease" prefHeight="25.0" prefWidth="25.0" text="-" HBox.hgrow="NEVER">
        <HBox.margin>
            <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
        </HBox.margin>
    </Button>
    <ProgressBar fx:id="lessBar" maxHeight="40.0" maxWidth="1.7976931348623157E308" prefHeight="30.0" style="-fx-accent: #ff6b6b; -fx-rotate: 180;" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets left="20.0" />
        </HBox.margin>
    </ProgressBar>
   <VBox alignment="CENTER">
      <children>
          <Label fx:id="nameLabel" alignment="CENTER" text="Ingredient name" textAlignment="CENTER">
              <font>
                  <Font size="15.0" />
              </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets top="10.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
          </Label>
         <Label fx:id="priceLabel" alignment="CENTER" prefWidth="150.0" text="Label" textAlignment="CENTER" />
      </children>
   </VBox>
    <ProgressBar fx:id="moreBar" maxHeight="40.0" maxWidth="1.7976931348623157E308" prefHeight="30.0" style="-fx-accent: #1dd1a1;" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets right="20.0" />
        </HBox.margin>
    </ProgressBar>
    <Button fx:id="increaseButton" ellipsisString="+" onAction="#increase" prefHeight="25.0" prefWidth="25.0" text="+" HBox.hgrow="NEVER">
        <HBox.margin>
            <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
        </HBox.margin>
    </Button>

</HBox>
